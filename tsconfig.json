{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "types": [ "node" ]
    },
    "include": [
        "index.ts",
        "config/*.ts",
        "models/*.ts",
        "routings/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}